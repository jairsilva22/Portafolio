@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portafolio</title>
    <link rel="icon" href="~/Imagenes/portafolio.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portafolio.styles.css" asp-append-version="true" />
	<link href="~/css/custom.css" rel="stylesheet"  asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-end align-items-center mt-3">
            <partial name="_CambiarIdioma" />
        </div>
    </div>
    <header>
        <nav class="sidebar-control">
            <a class="control-btn" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door"></i>
                <span class="control-tooltip">Sobre mí</span>
            </a>
            <a class="control-btn" asp-controller="Home" asp-action="Proyectos">
                <i class="bi bi-folder2-open"></i>
                <span class="control-tooltip">Proyectos</span>
            </a>
            <a class="control-btn" asp-controller="Home" asp-action="Contacto">
                <i class="bi bi-envelope"></i>
                <span class="control-tooltip">Contacto</span>
            </a>
         
        </nav>



     

    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex" style="justify-content: space-between">
            <div>
                &copy; 2025 - Portafolio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

            </div>
         
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
