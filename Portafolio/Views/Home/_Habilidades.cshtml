@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<div class="main-container">
        <div class="skill-container">
            <div class="row justify-content-md-center align-content-center text-center">
                
                <!-- Backend Card -->
                <div class="col-12 col-md-6 col-lg-4 mb-4 mb-lg-0">
                    <div class="habilidades" style="border-radius:15px 15px 15px 15px; box-shadow: 0 5px 15px rgba(0,0,0,0.3);">
                        <i class="bi-server"></i>
                        <h3 class="section-title">Backend Developer</h3>
                        <p class="section-description">
                                @Localizer["BackEnd"]
                        </p>
                        
                        <p class="cabecera">Stack :</p>
                        <div class="mb-3">
                            <span class="stack-badge">C#</span>
                            <span class="stack-badge">ASP.NET Core</span>
                            <span class="stack-badge">SQL Server</span>
                            <span class="stack-badge">.NET 9</span>
                        </div>
                        
                        <p class="cabecera">Experiencia:</p>
                        <ul class="experience-list">
                            <li>Web APIs RESTful</li>
                            <li>ASP.NET Core MVC</li>
                            <li>Entity Framework Core</li>
                            <li>Dapper (Micro ORM)</li>
                            <li>SQL Server Optimization</li>
                            <li>SignalR (Real-time)</li>
                            <li>Clean Architecture</li>
                        </ul>
                    </div>
                </div>
                
                <!-- Frontend Card -->
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="habilidades" style="border-radius:15px 15px 15px 15px; box-shadow: 0 5px 15px rgba(0,0,0,0.3);">
                        <i class="bi-code-slash"></i>
                        <h3 class="section-title">Frontend Developer</h3>
                        <p class="section-description">
                        @Localizer["FrontEnd"]
                        </p>
                        
                        <p class="cabecera">Stack :</p>
                        <div class="mb-3">
                            <span class="stack-badge">JavaScript</span>
                            <span class="stack-badge">HTML5</span>
                            <span class="stack-badge">CSS3</span>
                            <span class="stack-badge">Bootstrap</span>
                        </div>
                        
                        <p class="cabecera">Experiencia:</p>
                        <ul class="experience-list">
                            <li>Responsive Design</li>
                            <li>Bootstrap 5</li>
                            <li>Tailwind CSS</li>
                            <li>jQuery & JavaScript</li>
                            <li>CSS3 Animations</li>
                        <li>React <span style="color: var(--bs-primary); font-size: 0.8rem;">(En progreso)</span></li>
                            <li>UI/UX Implementation</li>
                        </ul>
                    </div>
                </div>
                
                <!-- Full Stack Card -->
                <div class="col-12 col-md-6 col-lg-4 mt-4 mt-lg-0">
                    <div class="habilidades" style="border-radius:15px 15px 15px 15px; box-shadow: 0 5px 15px rgba(0,0,0,0.3);">
                        <i class="bi-layers"></i>
                        <h3 class="section-title">Full Stack</h3>
                        <p class="section-description">
                        @Localizer["FullStack"]
                        </p>

                    <p class="cabecera"> @Localizer["Tools"]</p>
                        <div class="mb-3">
                            <span class="stack-badge">Git/GitHub</span>
                            <span class="stack-badge">Visual Studio</span>
                            <span class="stack-badge">Postman</span>
                            <span class="stack-badge">SQL Management</span>
                        </div>
                        
                        <p class="cabecera">Proyectos:</p>
                        <ul class="experience-list">
                            <li>Sistema Gestión Gimnasio</li>
                            <li>Help Desk Platform</li>
                            <li>Dashboards Empresariales</li>
                            <li>E-commerce Solutions</li>
                            <li>Real-time Applications</li>
                            <li>Database Design</li>
                            <li>API Integration</li>
                        </ul>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
